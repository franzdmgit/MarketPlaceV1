<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleProductoActivity"
    android:orientation="vertical"
    android:background="@color/color2">

    <TextView
        android:id="@+id/tev_detalle_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="30dp"
        android:layout_gravity="center">

    </TextView>

    <ImageView
        android:id="@+id/imv_detalle_imagen"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/logopeque">

    </ImageView>

    <TextView
        android:id="@+id/tev_detalle_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textSize="20dp"
        android:layout_gravity="center">

    </TextView>

    <TextView
        android:id="@+id/tev_detalle_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Precio"
        android:layout_gravity="center">

    </TextView>

    <TextView
        android:id="@+id/tev_detalle_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Disponible"
        android:layout_gravity="center">

    </TextView>




</LinearLayout>