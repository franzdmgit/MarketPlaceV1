<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@color/color2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="271dp"
        android:layout_weight="50"
        android:src="@drawable/img01">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_usuario"
        style="@style/MyTextView"
        android:textColor="@color/white">

    </TextView>

    <EditText
        android:id="@+id/edt_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_usuario"
        android:layout_weight="5"
        style="@style/MyEditText"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp">

    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_contrasena"
        style="@style/MyTextView"
        android:textColor="@color/white">

    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <EditText
        android:id="@+id/edt_contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_contrasena"
        style="@style/MyEditText"
        android:layout_weight="5"
        android:layout_marginBottom="10dp"
        android:background="@drawable/campo_redondeado"
        android:layout_margin="10dp">

    </EditText>

    </com.google.android.material.textfield.TextInputLayout>
    <Button

        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_login"
        android:layout_weight="8"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:background="@drawable/bordes_redondos"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/icon02">

    </Button>

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_registro"
        android:layout_weight="8"
        android:textSize="20dp"
        android:background="@drawable/bordes_redondos"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/icon03">

    </Button>

</LinearLayout>